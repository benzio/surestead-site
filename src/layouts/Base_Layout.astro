---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Surestead Properties</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;700&family=Roboto:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" href="/surestead_favicon.svg" type="image/svg" />
    <style>
      /* Prevent layout shift from font loading */
      .font-outfit, .font-roboto {
        font-display: swap;
      }
    </style>
  </head>
  <body class="bg-gray-100 leading-tight text-gray-900 overflow-x-hidden">
    <header class="fixed top-0 left-0 right-0 z-50 bg-surestead-dark text-white shadow py-2 md:py-4 px-0">
      <nav
        class="max-w-8xl mx-auto flex items-center justify-between py-2 md:py-4 px-6 md:px-4 xl:px-6 relative">
        <!-- Logo -->
        <picture class="flex items-center">
          <!-- Mobile Logo -->
          <img
            src="/SPS_mrk_stk_txt_rev_rgb.svg"
            alt="Surestead Logo"
            class="h-16 w-auto lg:hidden"
            width="160"
            height="64"
          />
          <!-- Desktop Logo -->
          <img
            src="/SPS_logo_dark.svg"
            alt="Surestead Logo"
            class="hidden lg:block h-12 md:h-20 md:-ml-2 w-auto flex-shrink-0"
            width="200"
            height="80"
          />
        </picture>

        <!-- Mobile Let's Talk Button -->
        <a 
          id="mobileLetsTalkButton"
          href="/contact" 
          class="lg:hidden text-surestead-dark px-4 py-2 text-sm font-bold uppercase tracking-widest transition-colors bg-white hover:bg-surestead-green-hover active:bg-surestead-green-hover border border-transparent"
        >
          Let's Talk
        </a>

        <!-- Hamburger Menu Button (in flex flow, not absolute) -->
        <button
          id="menuButton"
          class="lg:hidden p-2 rounded-lg hover:bg-surestead-green hover:text-surestead-dark transition-colors text-white"
          aria-label="Open menu"
        >
          <svg
            class="w-8 h-8"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>

        <!-- Close Button (same position as hamburger) -->
        <button
          id="closeButton"
          class="lg:hidden hidden pt-16 rounded-lg hover:bg-surestead-green hover:text-surestead-dark transition-colors text-white"
          aria-label="Close menu"
        >
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"
            />
          </svg>
        </button>

        <!-- Navigation Items -->
        <ul
          id="navMenu"
          class="hidden lg:flex text-sm sm:text-base md:text-lg font-bold items-end justify-between uppercase tracking-widest
                 space-x-4 sm:space-x-8 md:space-x-8 lg:space-x-24
                 lg:ml-auto self-end mb-2"
        >
          <li><a href="/" class="px-6 py-3 transition-colors hover:bg-surestead-dark hover:text-white border border-transparent hover:border-surestead-green-hover">About Us</a></li>
          <li><a href="/services" class="px-6 py-3 transition-colors hover:bg-surestead-dark hover:text-white border border-transparent hover:border-surestead-green-hover">Our Services</a></li>
          <li>
            <a 
              href="/contact" 
              class="text-surestead-dark px-6 py-3 transition-colors bg-white hover:bg-surestead-green-hover active:bg-surestead-green-hover border border-transparent"
            >
              Let's Talk
            </a>
          </li>
        </ul>
      </nav>

      <!-- Mobile Fullscreen Menu -->
      <div
        id="mobileMenu"
        class="fixed inset-0 bg-surestead-dark text-white hidden z-50 pt-24 flex items-start justify-center relative w-full h-full"
      >
        <!-- Navigation Links -->
        <nav class="flex flex-col space-y-10 text-xl text-center font-bold uppercase tracking-widest">
          <a href="/" class="px-6 py-3 transition-colors hover:bg-surestead-dark hover:text-white border border-transparent hover:border-surestead-green">About Us</a>
          <a href="/services" class="px-6 py-3 transition-colors hover:bg-surestead-dark hover:text-white border border-transparent hover:border-surestead-green">Our Services</a>
          <a 
              href="/contact" 
              class="text-surestead-dark px-6 py-3 transition-colors bg-white hover:bg-surestead-green-hover active:bg-surestead-green-hover border border-transparent"
            >
              Let's Talk
            </a>
        </nav>
      </div>

    </header>

    <main class="pt-20 md:pt-28"><slot /></main>

    <footer class="bg-[#707070] pt-24 py-6 text-center text-sm text-white">
      <!-- Call to Action -->
	<div class="grid grid-cols-1 place-items-center gap-8 md:gap-8 gap-y-16 py-8 md:py-4 pb-16 md:pb-12 -mt-10 px-4 md:px-12 bg-[#707070]">

    <!-- Logo -->
    <img src="/SPS_logo_with_Lettering_Light.svg" alt="Surestead Logo" class="h-[120px] w-auto mb-4 md:mb-0" width="400" height="200" />
    
    <!-- Button -->
    
    <a href="/contact"
     class="text-surestead-dark px-6 py-3 transition-colors bg-white hover:bg-surestead-green-hover active:bg-surestead-green-hover border border-transparent font-bold uppercase tracking-widest flex items-center justify-center gap-4 mb-8 md:mb-0">
    <span class="text-xl leading-none">Let's become trusted partners</span>
    <!-- Insert your chosen SVG here -->
    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 32 28">
    <path d="M17 24.23L18.77 26l10-12L18.77 2 17 3.77 25.23 14z" stroke="currentColor" stroke-width="3"/>
    <path d="M4 24.23L5.77 26l10-12L5.77 2 4 3.77 12.23 14z" stroke="currentColor" stroke-width="3"/>
  </svg>
  </a>
    <div class="text-center text-white px-4">
      <p class="font-roboto text-lg md:text-xl lg:text-2xl">
        Explore our <a href="/services" class="underline font-semibold hover:text-surestead-green-hover">Services</a> page or
        <a href="/contact" class="underline font-semibold hover:text-surestead-green-hover">contact us</a> to learn more.
      </p>
      </div>
    </div>
      Â© 2025 Surestead Property Services LLC. All rights reserved.
    </footer>

    <script>
      // Mobile menu functionality
      const menuButton = document.getElementById('menuButton');
      const closeButton = document.getElementById('closeButton');
      const mobileMenu = document.getElementById('mobileMenu');
      const mobileLetsTalkButton = document.getElementById('mobileLetsTalkButton');
      const body = document.body;

      const openMenu = () => {
        mobileMenu?.classList.remove('hidden');
        menuButton?.classList.add('hidden');
        closeButton?.classList.remove('hidden');
        mobileLetsTalkButton?.classList.add('hidden');
        body.style.overflow = 'hidden';
      };

      const closeMenu = () => {
        mobileMenu?.classList.add('hidden');
        menuButton?.classList.remove('hidden');
        closeButton?.classList.add('hidden');
        mobileLetsTalkButton?.classList.remove('hidden');
        body.style.overflow = '';
      };

      menuButton?.addEventListener('click', openMenu);
      closeButton?.addEventListener('click', closeMenu);

      // Close menu when clicking outside (optional, can be removed if not desired)
      document.addEventListener('click', (e) => {
        if (
          mobileMenu &&
          !mobileMenu.classList.contains('hidden') &&
          !menuButton?.contains(e.target as Node) &&
          !mobileMenu.contains(e.target as Node)
        ) {
          closeMenu();
        }
      });
    </script>
  </body>
</html>
