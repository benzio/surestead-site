---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Surestead Properties</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;700&family=Roboto:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" href="/surestead_favicon.svg" type="image/svg" />
  </head>
  <body class="bg-gray-100 leading-tight text-gray-900 overflow-x-hidden">
    <header class="bg-surestead-dark text-white shadow py-4 md:px-8 px-0">
      <nav
        class="max-w-8xl mx-auto flex items-center justify-between px-6 md:px-0 xl:px-24 relative">
        <!-- Logo -->
        <picture class="ml-4">
          <img
            src="/SPS_logo_dark.svg"
            alt="Surestead Logo"
            class="h-12 md:h-20 w-auto flex-shrink-0"
          />
        </picture>

        <!-- Hamburger Menu Button (in flex flow, not absolute) -->
        <button
          id="menuButton"
          class="md:hidden p-2 rounded-lg hover:bg-surestead-green hover:text-surestead-dark transition-colors text-white"
          aria-label="Open menu"
        >
          <svg
            class="w-8 h-8"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>

        <!-- Navigation Items -->
        <ul
          id="navMenu"
          class="hidden md:flex text-sm sm:text-base md:text-lg font-bold items-center justify-between uppercase
                 space-x-4 sm:space-x-8 md:space-x-8 lg:space-x-24
                 mr-2 sm:mr-8 md:mr-8 lg:mr-36
                 md:ml-auto lg:ml-0"
        >
          <li><a href="/" class="hover:underline">About Us</a></li>
          <li><a href="/services" class="hover:underline">Our Services</a></li>
          <li><a href="/contact" class="hover:underline">Contact Us</a></li>
        </ul>
      </nav>

      <!-- Mobile Fullscreen Menu -->
      <div
        id="mobileMenu"
        class="fixed inset-0 bg-surestead-dark text-white hidden z-50 pt-24 flex items-start justify-center relative w-full h-full"
      >
        <!-- Close Button (absolute in overlay) -->
        <button
          id="closeButton"
          class="absolute top-4 right-4 p-2 text-white z-50"
          aria-label="Close menu"
        >
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"
            />
          </svg>
        </button>

        <!-- Navigation Links -->
        <nav class="flex flex-col space-y-10 text-2xl text-center font-bold uppercase">
          <a href="/" class="hover:text-surestead-green">About Us</a>
          <a href="/services" class="hover:text-surestead-green">Our Services</a>
          <a href="/contact" class="hover:text-surestead-green">Contact Us</a>
        </nav>
      </div>

    </header>

    <main><slot /></main>

    <footer class="bg-white pt-24 py-6 text-center text-sm text-gray-500">
      Â© 2025 Surestead Property Services LLC. All rights reserved.
    </footer>

    <script>
      // Mobile menu functionality
      const menuButton = document.getElementById('menuButton');
      const closeButton = document.getElementById('closeButton');
      const mobileMenu = document.getElementById('mobileMenu');
      const body = document.body;

      const openMenu = () => {
        mobileMenu?.classList.remove('hidden');
        menuButton?.classList.add('hidden');
        body.style.overflow = 'hidden';
      };

      const closeMenu = () => {
        mobileMenu?.classList.add('hidden');
        menuButton?.classList.remove('hidden');
        body.style.overflow = '';
      };

      menuButton?.addEventListener('click', openMenu);
      closeButton?.addEventListener('click', closeMenu);

      // Close menu when clicking outside (optional, can be removed if not desired)
      document.addEventListener('click', (e) => {
        if (
          mobileMenu &&
          !mobileMenu.classList.contains('hidden') &&
          !menuButton?.contains(e.target as Node) &&
          !mobileMenu.contains(e.target as Node)
        ) {
          closeMenu();
        }
      });
    </script>
  </body>
</html>
