<style>
  .accordion-arrow {
    display: inline-block;
    transform-origin: center;
  }
  
  .accordion-content {
    transition: max-height 0.3s ease-in-out, opacity 0.3s ease-in-out;
  }
</style>

<script>
  // Declare global function type
  declare global {
    interface Window {
      toggleAccordion: (idx: number) => void;
    }
  }
  
  // Wait for the DOM to be fully loaded
  document.addEventListener('DOMContentLoaded', function() {
    let openIndex = -1; // Start with no accordion open
    
    // Make toggleAccordion function globally available
    window.toggleAccordion = function(idx: number) {
      const accordionContents = document.querySelectorAll('.accordion-content');
      const accordionArrows = document.querySelectorAll('.accordion-arrow');
      
      // If clicking the same accordion, close it
      if (openIndex === idx) {
        openIndex = -1;
      } else {
        openIndex = idx;
      }
      
      // Update all accordion states
      accordionContents.forEach((el, i) => {
        const element = el as HTMLElement;
        if (i === openIndex) {
          element.style.maxHeight = '600px'; // Increased height for expanded content
          element.style.opacity = '1';
        } else {
          element.style.maxHeight = '0';
          element.style.opacity = '0';
        }
      });
      
      accordionArrows.forEach((el, i) => {
        const element = el as HTMLElement;
        if (i === openIndex) {
          element.style.transform = 'rotate(90deg)';
          element.style.transition = 'transform 0.3s ease-in-out';
          element.classList.remove('text-white');
          element.classList.add('text-surestead-light-green');
        } else {
          element.style.transform = 'rotate(0deg)';
          element.style.transition = 'transform 0.3s ease-in-out';
          element.classList.remove('text-surestead-light-green');
          element.classList.add('text-white');
        }
      });
    };
    
    // Don't auto-open any accordion on page load
  });
</script>